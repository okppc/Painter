        android:layout_alignParentTop="true" / -->

    <com.eebbk.painter.PaintView
        android:id="@+id/pv_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_function1"
        android:layout_alignParentTop= "true" />
    
    
     <LinearLayout
