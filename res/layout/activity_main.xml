                    android:background="@drawable/undox" >
                </Button>

                <Button
                    android:id="@+id/buttonplygon_ID"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/dbxx" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buttonredo_ID"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/redox" >
                </Button>

                <Button
                    android:id="@+id/buttonabout_ID"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/gyx" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    
    
    
</RelativeLayout>